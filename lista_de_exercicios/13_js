//dia da semana é util ou não

dia = 1
switch (dia) {
    case 1:
        dia = "Domingo"
        break
    case 2:
        dia = 'Segunda-feira'
        break
    case 3:
        dia = 'Terça-feira'
        break
    case 4:
        dia = 'Quarta-feira'
        break
    case 5:
        dia = 'Quinta-feira'
        break
    case 6:
        dia = 'Sexta-feira'
        break
    case 7:
        dia = 'Sábado'
        break
    case 8:
        dia = 'Dia inválido'
     
}
console.log(dia)