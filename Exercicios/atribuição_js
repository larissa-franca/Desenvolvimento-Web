const a = 7 //o simbolo = é uma atribuição
let b = 3

b += a //atribuição aditiva, esta acrscentando o valor de a para b
console.log(a)

b -= 4 //atribuição subtrativa, esta tirando o valor de a em b
console.log(b)

b *= 2 //atribuição multiplicativa, esta multiplicando o valor de b por a
console.log(b)

b /= 2 //atribuição por divisão, esta dividindo o valor de b por a
console.log(b)

b %= 2 //atribuição modular se a divisão for por um número par o resultado é 0 se for ímpar o resultado é 1
console.log(b)